{
  "swagger": "2.0",
  "info": {
    "title": "Digital Signature API",
    "version": "1.0.0"
  },
  "schemes": ["https"],
  "consumes": ["application/json"],
  "produces": ["application/json"],
  "basePath": "/api/v1",
  "paths": {
    "/docusign": {
      "post": {
        "summary": "Send DocuSign Email to a specified user",
        "operationId": "SendDocuSignEmail-v1",
        "parameters": [
          {
            "name": "x-user-id",
            "in": "header",
            "description": "User ID",
            "required": true,
            "type": "string"
          },
          {
            "name": "x-api-key",
            "in": "header",
            "description": "Api Key",
            "required": true,
            "type": "string"
          },
          {
            "name": "x-api-version",
            "in": "header",
            "description": "Api version (if not specified, the latest version will be used)",
            "required": false,
            "type": "string",
            "example": "v1"
          },
          {
            "name": "htmls",
            "in": "body",
            "description": "List of HTMLs to be signed by the user (stringified HTMLs)",
            "required": true,
            "type": "array",
            "items": {
              "type": "string"
            },
            "example": "['HTML_1']"
          },
          {
            "name": "emailSubject",
            "in": "body",
            "description": "Email Subject",
            "required": true,
            "type": "string",
            "example": "'Test Email'"
          },
          {
            "name": "signers",
            "in": "body",
            "description": "List of Signers",
            "required": true,
            "type": "array",
            "example": "[{ userEmail: 'example@email.com', userName: 'Name' }]",
            "items": {
              "$ref": "#/definitions/Signers"
            }
          },
          {
            "name": "signatures",
            "in": "body",
            "description": "List of Signatures",
            "required": true,
            "type": "array",
            "example": "[{ anchorString: '**s1**' }]",
            "items": {
              "$ref": "#/definitions/Signature"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Result of the operation",
            "schema": {
              "type": "object",
              "properties": {
                "envelopeId": {
                  "type": "string",
                  "example": "123456789"
                }
              }
            }
          },
          "500": {
            "description": "Error message",
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string",
                  "example": "Error message"
                },
                "code": {
                  "type": "number",
                  "example": "501"
                }
              }
            }
          }
        }
      }
    }
  },
  "definitions": {
    "Signers": {
      "type": "object",
      "properties": {
        "userEmail": {
          "type": "string"
        },
        "userName": {
          "type": "string"
        }
      }
    },
    "Signature": {
      "type": "object",
      "properties": {
        "anchorString": {
          "type": "string"
        }
      }
    }
  }
}
